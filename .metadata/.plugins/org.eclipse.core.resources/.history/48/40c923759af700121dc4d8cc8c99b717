// socket 이 아니라 sockets 임에 주의
io.sockets.on(
		'connection',
		function(socket)
		{
			// 'news' 메세지 발송
			socket.emit(
					'news',
					{hello:'world'}
				);
			
			// 메세지 수신
			socket.on(
					'my other event',
					function (data)
					{
						console.log('server : ', data);
					}
				);
			
			/*
			//console.log('server : ', socket);
			socket.broadcast.emit(
					'user connect',
					{broadcast:'message'}
				);
			*/
		}
	);
