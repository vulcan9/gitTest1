var express = require('express')
, http = require('http')
, fs = require('fs');

var app = express();
var server = http.createServer(app)
, io = require('socket.io').listen(server);

server.listen(80);

app.get('/', function (req, res){
	res.sendfile(__dirname + '/index.html');
});

