html(lang="en")
    head
        title Jasmine Test Runner

        // css
        link(href='lib/jasmine-1.0.0.rc1/jasmine.css', rel='stylesheet', type='text/css')
        
        // jasmine
        script(src='lib/jasmine-1.0.0.rc1/jasmine.js', type='text/javascript')
        script(src='lib/jasmine-1.0.0.rc1/jasmine-html.js', type='text/javascript')
        
        // sinon and plugins
        script(src='lib/sinon-1.2.0.js', type='text/javascript') 
        script(src='lib/jasmine-sinon.js', type='text/javascript') 
        script(src='lib/jasmine-jquery-1.3.1.js', type='text/javascript') 
        
        // test subject
        each file in jsFiles
            script(src=file, type='text/javascript')   
        
        // specs
        each test in jsTests
            script(src=test, type='text/javascript')
    
    body
        // include templates
        include /../templates/person
    
        script(type="text/javascript")
            jasmine.getEnv().addReporter(new jasmine.TrivialReporter());
            jasmine.getEnv().execute();